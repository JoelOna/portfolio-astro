---
import angular from '../icons/angular.astro'
import Express from '../icons/express.astro';
import typescript from '../icons/typescript.astro'
import Bootstrap from '../icons/bootstrap.astro';
const TAGS = {
	angular:{
		name: 'Angular',
		icon: angular,
		class: 'bg-[#473a4f] text-white py-1 px-2 border border-white/10'
	},
	express:{
		name: 'Express',
		icon: Express,
		class: 'bg-[#5b5a5c] text-white py-1 px-2 border border-white/10'
	},
	typescript:{
		name: 'Typescript',
		icon: typescript,
		class: 'bg-[#3b4857] text-white py-1 px-2 border border-white/10'
	},
	bootstrap:{
		name: 'Bootstrap',
		icon: Bootstrap,
		class: 'bg-[#393142] text-white py-1 px-2 border border-white/10'
	},
	tailwind:{
		name: 'Tailwind',
		icon: '<svg viewBox="0 0 256 154" width="256" height="154" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid"><defs><linearGradient x1="-2.778%" y1="32%" x2="100%" y2="67.556%" id="a"><stop stop-color="#2298BD" offset="0%"/><stop stop-color="#0ED7B5" offset="100%"/></linearGradient></defs><path d="M128 0C93.867 0 72.533 17.067 64 51.2 76.8 34.133 91.733 27.733 108.8 32c9.737 2.434 16.697 9.499 24.401 17.318C145.751 62.057 160.275 76.8 192 76.8c34.133 0 55.467-17.067 64-51.2-12.8 17.067-27.733 23.467-44.8 19.2-9.737-2.434-16.697-9.499-24.401-17.318C174.249 14.743 159.725 0 128 0ZM64 76.8C29.867 76.8 8.533 93.867 0 128c12.8-17.067 27.733-23.467 44.8-19.2 9.737 2.434 16.697 9.499 24.401 17.318C81.751 138.857 96.275 153.6 128 153.6c34.133 0 55.467-17.067 64-51.2-12.8 17.067-27.733 23.467-44.8 19.2-9.737-2.434-16.697-9.499-24.401-17.318C110.249 91.543 95.725 76.8 64 76.8Z" fill="url(#a)"/></svg>',
		class: 'bg-[#003159] text-white py-1 px-2 border border-white/10'
	}

}
const PROJECTS =[
	{
		title: 'Rick y Morty',
		description:"Una aplicaciÃ³n que muestra los personajes, episodios y localizaciones de la serie 'Rick And Morty'.",
		link:'https://rick-and-morty-five-nu.vercel.app/',
		github:'https://github.com/JoelOna/rick-and-morty',
		img:'/rick_and_morty.png',
		tags: [TAGS.angular,TAGS.typescript,TAGS.bootstrap]
	},
	{
		title: 'HAFIT',
		description:'Proyecto de final de curso sobre un tienda de venta de suplementos deportivos, accesorios, planes nutricionales y guias de ejercicios.',
		link:'https://leonardocaero.github.io/HAFIT',
		github:'https://github.com/LeonardoCaero/HAFIT',
		img:'/HAFIT_2.png',
		tags: [TAGS.express,TAGS.angular,TAGS.typescript,TAGS.bootstrap]
	}

]

---
{
	PROJECTS.map(({title,description,tags,img,link,github})=>(
		<article class="rounded-md grid md:grid-cols-2 sm:grid-cols-1 mx-auto " >
			<img src={img} alt="Imagen del proyecto" srcset="" class="lg:h-auto md:min-h-full md:object-cover shadow-2xl shadow-white/10 rounded-l-md rounded">
				<section>
					<h3 class="ps-0 md:ps-5 pt-10 pb-5 text-3xl text-gray-200">{title}</h3>
					<ul class="grid grid-cols-2 lg:grid-cols-5 md:grid-cols-3 md:flex-row gap-x-2 ps-0 md:px-5">
						{
							tags.map(tag =>(
								<li class="mb-2 lg:mb-0 items-center ">
									<span class={`flex gap-x-2 rounded-full text-xs ${tag.class}`}>
										<span class="w-4 h-4"><tag.icon /> </sp>{tag.name}
									</span>
										
								</li>
							))
						}	
					</ul>
					<p class="ps-0 md:ps-5 py-5 text-md text-gray-200">{description}</p>
					<div class="grid md:grid-cols-2 sm:grid-cols-1 ps-0 md:ps-5 lg:pt-10 md:py-4 text-center">
						<a href={link} target="_blank" class="text-white bg-gray-700 border border-gray-300  hover:bg-gray-600 rounded-lg text-sm px-5 py-2.5 me-2 mb-2  transition-all hover:transition-all"><span class="flex gap-x-3 items-center py-2"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-world-www" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" /><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" /><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" /><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" /><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" /><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" /><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" /></svg>Ver resultado final</span></a>
						<a href={github} target="_blank" class="text-white bg-gray-700 border border-gray-300  hover:bg-gray-600 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2  transition-all hover:transition-all"><span class="flex gap-x-3 items-center py-2"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>Ver el codigo</span></a>
					</div>
					
				</section>
		</article>
	))
}