---
interface Props{
    img : string,
    bio : string,
}
const {img, bio} = Astro.props
---

<aside class="r bg-[url('/joel.jpeg')] blur-sm md:fixed md:w-1/3 md:min-h-screen md:inset-0 md:bg-cover sm:h-72 sm:relative">
    <div class="grid place-content-center mt-52 blur-none "> 
        <div class="bg-white h-80 w-80 rounded-full flex items-center justify-center shadow-xl "> 
            <img src={img} alt="" srcset="" class="object-cover rounded-full w-64 h-64">
        </div>
        <p class="text-center mt-12">{bio}</p>
    </div>
</aside>

