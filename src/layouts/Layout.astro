--- 
interface Props {
	title: string;
}

const { title } = Astro.props;

import Navbar from '../components/Navbar.astro';

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/code.svg" />
		<meta name="generator" content={Astro.generator} />	
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
		<title>{title}</title>
	</head>
	<body>
		<Navbar></Navbar>
		<div class="absolute top-0 z-[-2] h-full w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<slot />
	</body>
</html>
<script>
	document.addEventListener("DOMContentLoaded", function () {
  const elements = document.querySelectorAll(".animate-on-scroll");

  let lastScrollTop = 0; // Variable para rastrear la posición anterior del scroll

  function checkVisibility() {
    elements.forEach((element) => {
      const windowHeight = window.innerHeight;
      const elementTop = element.getBoundingClientRect().top;

      if (elementTop < windowHeight && window.scrollY > lastScrollTop) {
        // Si el elemento es visible y se hace scroll hacia abajo
    
        element.classList.add("active");
    //   } else if (elementTop >= windowHeight && window.scrollY < lastScrollTop) {
    //     // Si el elemento no es visible y se hace scroll hacia arriba
    //     element.classList.remove("active");
    //     element.classList.add("desactivate");
      }
    });

    lastScrollTop = window.scrollY; // Actualiza la posición anterior del scroll
  }

  window.addEventListener("scroll", checkVisibility);
});

	
	
	</script>
<style is:global>
	@font-face {
		font-family: 'Montserrat';
		src: url('../../public/fonts/Montserrat/Montserrat-VariableFont_wght.ttf');
	}
	
	html {
		background: #0a0a0a;
		/* background-size: 224px;
		color-scheme: dark light; */
		
	}
	*{
		font-family: 'Montserrat';
		scroll-behavior: smooth;
		overflow-x:hidden;
	}
	/* code { */
		/* font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	} */
	.animate-on-scroll {
    opacity: 0;
    transform: translateX(-100px);
    transition: opacity 1s, transform 1s;
}

.animate-on-scroll.active {
    opacity: 1;
    transform: translateX(0);
}
.animate-on-scroll.desactivate {
    opacity: 0;
    transform: translateX(-100%);
    transition: opacity 1s, transform 1s;
}
</style>
